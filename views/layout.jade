                    li.nav_bar-welcome-item Hi, #{username}.
                    li#profile.nav_bar-welcome-item 
                        a(href='/profile') 帐号管理
                    li.nav_bar-welcome-item(id='#{pageLink}')
                        a(href='/#{pageLink}') #{pageName}
                    li#logout.nav_bar-welcome-item
                        a(href='/logout') 登出
              -else
                a.nav_bar-logo(title="内部构建工具",href="/")
            .content
                != body
