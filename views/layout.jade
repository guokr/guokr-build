html
    head
        title!= title
        meta(charset='utf-8')
        link(rel='stylesheet', href='/skin/css/resources/css/ext-all.css')
        link(rel='stylesheet', href='/skin/css/builder-all.css')
        //-script(src='/js/jquery/jquery-1.7.1.min.js')
        script(src='/js/json/json.min.js')
